					<div class="wrapper">
						<div class="badge badge-gradient-danger text-center">
							<h3 class="project-title mb-0">@Model.Score</h3>
						</div>
					</div>
				</div>
				<div class="d-flex align-items-start">
					<div class="wrapper mx-3">
						<div class="badge badge-gradient-danger text-center">
							<h3 class="project-title mb-0">Pass Status</h3>
						</div>
					</div>
					<div class="wrapper">
						<div class="badge badge-gradient-danger text-center">
							<h3 class="project-title mb-0">@Model.PassStatus</h3>
						</div>
					</div>
				</div>
				<div class="d-flex align-items-start">
					<div class="wrapper mx-3">
						<div class="badge badge-gradient-danger text-center">
							<h3 class="project-title mb-0">Resultes %</h3>
						</div>
					</div>
					<div class="wrapper">
						<div class="badge badge-gradient-danger text-center">
							<h3 class="project-title mb-0">@Model.Resultes</h3>
						</div>
					</div>
				</div>

				<a asp-controller="Home" asp-action="Index" asp-area="" class="btn btn-outline-success btn-lg mt-3">Go Back Home</a>
			</div>
		</div>
	</div>

